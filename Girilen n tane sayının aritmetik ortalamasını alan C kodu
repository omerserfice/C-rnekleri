#include <stdio.h>
#include <stdlib.h>

int main()
{


     int i,n;

     int toplam=0;
     double ortalama=0;
      printf("Sayi gir:");
      scanf("%d",&n);
      int sayi[n];
     for(i=0;i<n;i++){

        printf("%d.sayiyi giriniz:",i+1);
        scanf("%d",&sayi[i]);

        toplam=toplam+sayi[i];
        ortalama=(double)toplam/n;

     }
     printf("Girilen sayi toplami:%d\n",toplam);
     printf("Girilen sayi ortalamasi:%.2f",ortalama);




    return 0;
}
